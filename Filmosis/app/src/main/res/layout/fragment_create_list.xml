<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createList_addListTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createList_addListTv"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/createList_editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la lista"
        android:padding="16dp"
        android:layout_below="@id/createList_addListTv"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/createList_editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la lista"
        android:padding="16dp"
        android:layout_below="@id/createList_editTextTitle"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/createList_editTextDescription"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/createList_buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/createList_buttonSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</RelativeLayout>
